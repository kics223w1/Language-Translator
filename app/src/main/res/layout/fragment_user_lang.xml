<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradients_blue_to_purple"
    tools:context="myapptranslate1.my.Fragment.UserLangFragment">

    <LinearLayout
        android:id="@+id/top"
        android:layout_width="match_parent"
        android:background="@color/purple_700"
        android:layout_height="wrap_content">


        <ImageButton
            android:id="@+id/btn_back_action_bar"
            android:layout_weight="0.1"
            android:background="@drawable/ripple_effect"
            android:layout_width="40dp"
            android:layout_height="match_parent"
            android:src="@drawable/back" />

        <TextView
            android:layout_marginLeft="6dp"
            android:layout_marginTop="6dp"
            android:id="@+id/tx_title_action_bar"
            android:textSize="26sp"
            android:textColor="@color/black"
            android:layout_weight="1.9"
            android:layout_width="0dp"
            android:layout_height="match_parent"/>



    </LinearLayout>


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rcv_user_languages"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/bottom_page_2"
        android:layout_marginBottom="10dp"
        android:layout_below="@+id/top" />

    <LinearLayout
        android:id="@+id/bottom_page_2"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal"
        android:visibility="invisible"
       >

        <TextView
            android:text="@string/Previous_page"
            android:id="@+id/btn_bottom_page_left"
            android:textColor="@color/black"
            android:gravity="center"
            android:textSize="22sp"
            android:layout_marginRight="5dp"
            android:background="@drawable/ripple_effect"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"/>

        <TextView
            android:text="@string/Next_page"
            android:id="@+id/btn_bottom_page_right"
            android:textColor="@color/black"
            android:gravity="center"
            android:textSize="22sp"
            android:layout_marginLeft="5dp"
            android:background="@drawable/ripple_effect"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/bottom_page_1"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:layout_alignParentBottom="true"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        >

        <TextView
            android:id="@+id/btn_bottom_page_1"
            android:text="@string/Next_page"
            android:textSize="22sp"
            android:textColor="@color/black"
            android:gravity="center"
            android:background="@drawable/ripple_effect"
            android:layout_width="160dp"
            android:layout_height="match_parent"/>

    </LinearLayout>

</RelativeLayout>