<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradients_blue_to_purple"
    tools:context="myapptranslate1.my.Fragment.ListBookSelectFragment">


    <LinearLayout
        android:id="@+id/top"
        android:layout_width="match_parent"
        android:background="@color/purple_700"
        android:layout_height="wrap_content">


        <ImageButton
            android:id="@+id/btn_back_action_bar"
            android:layout_weight="0.1"
            android:background="@drawable/ripple_effect"
            android:layout_width="40dp"
            android:layout_height="match_parent"
            android:src="@drawable/back" />

        <TextView
            android:layout_marginLeft="6dp"
            android:layout_marginTop="6dp"
            android:id="@+id/tx_title_action_bar"
            android:textSize="26sp"
            android:textColor="@color/black"
            android:layout_weight="1.9"
            android:layout_width="0dp"
            android:layout_height="match_parent"/>



    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:layout_below="@+id/top"
        android:id="@+id/rcv_book_select"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>


</RelativeLayout>